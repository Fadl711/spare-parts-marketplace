{
    "tech_stack": ["PHP", "Laravel 11", "MySQL", "Sanctum"],
    "features": [
        {
            "name": "Customer Authentication",
            "description": "Customer registration, login, and logout functionality using Sanctum.",
            "files": [
                "app/Http/Controllers/Api/V1/Auth/CustomerAuthController.php",
                "app/Models/Customer.php",
                "routes/api.php"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/v1/customer/register": {
                        "post": {
                            "summary": "Register a new customer",
                            "requestBody": {
                                "required": true,
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "required": [
                                                "name",
                                                "phone",
                                                "password",
                                                "device_name"
                                            ],
                                            "properties": {
                                                "name": { "type": "string" },
                                                "phone": { "type": "string" },
                                                "password": {
                                                    "type": "string"
                                                },
                                                "password_confirmation": {
                                                    "type": "string"
                                                },
                                                "device_name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "responses": {
                                "201": {
                                    "description": "Account created successfully"
                                }
                            }
                        }
                    },
                    "/api/v1/customer/login": {
                        "post": {
                            "summary": "Customer login",
                            "requestBody": {
                                "required": true,
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "required": [
                                                "phone",
                                                "password",
                                                "device_name"
                                            ],
                                            "properties": {
                                                "phone": { "type": "string" },
                                                "password": {
                                                    "type": "string"
                                                },
                                                "device_name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "responses": {
                                "200": { "description": "Login successful" },
                                "401": { "description": "Invalid credentials" }
                            }
                        }
                    },
                    "/api/v1/customer/logout": {
                        "post": {
                            "summary": "Customer logout",
                            "security": [{ "bearerAuth": [] }],
                            "responses": {
                                "200": {
                                    "description": "Logged out successfully"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "Seller Authentication",
            "description": "Seller registration and login functionality.",
            "files": [
                "app/Http/Controllers/Api/V1/Auth/SellerAuthController.php",
                "app/Models/Seller.php",
                "routes/api.php"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/v1/seller/register": {
                        "post": {
                            "summary": "Register a new seller",
                            "requestBody": {
                                "required": true,
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "required": [
                                                "store_name",
                                                "owner_name",
                                                "phone",
                                                "password",
                                                "city",
                                                "district",
                                                "device_name"
                                            ],
                                            "properties": {
                                                "store_name": {
                                                    "type": "string"
                                                },
                                                "owner_name": {
                                                    "type": "string"
                                                },
                                                "phone": { "type": "string" },
                                                "password": {
                                                    "type": "string"
                                                },
                                                "city": { "type": "string" },
                                                "district": {
                                                    "type": "string"
                                                },
                                                "device_name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "responses": {
                                "201": {
                                    "description": "Store registered successfully"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "Core Data",
            "description": "Public APIs for retrieving vehicles, categories, and part types.",
            "files": [
                "app/Http/Controllers/Api/V1/CoreDataController.php",
                "app/Models/Vehicle.php",
                "app/Models/Category.php",
                "app/Models/Subcategory.php",
                "routes/api.php"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/v1/vehicles": {
                        "get": {
                            "responses": {
                                "200": { "description": "List of vehicles" }
                            }
                        }
                    },
                    "/api/v1/categories": {
                        "get": {
                            "responses": {
                                "200": { "description": "List of categories" }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "Marketplace",
            "description": "Search parts and view details.",
            "files": [
                "app/Http/Controllers/Api/V1/MarketplaceController.php",
                "app/Models/Part.php",
                "routes/api.php"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/v1/parts": {
                        "get": {
                            "parameters": [
                                { "name": "make", "in": "query" },
                                { "name": "model", "in": "query" }
                            ],
                            "responses": {
                                "200": { "description": "List of parts" }
                            }
                        }
                    }
                }
            }
        }
    ]
}
